{
  "dashboard": {
    "title": "Trend Intelligence Platform - Overview",
    "tags": ["trends", "platform", "overview"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(api_requests_total[5m])) by (endpoint)",
            "legendFormat": "{{ endpoint }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "API Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(api_requests_total{status_code=~\"5..\"}[5m])) by (endpoint) / sum(rate(api_requests_total[5m])) by (endpoint)",
            "legendFormat": "{{ endpoint }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Error Rate"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.05], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High API Error Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 3,
        "title": "API Latency (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(api_request_duration_seconds_bucket[5m])) by (endpoint, le))",
            "legendFormat": "{{ endpoint }} (p95)",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(api_request_duration_seconds_bucket[5m])) by (endpoint, le))",
            "legendFormat": "{{ endpoint }} (p99)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Active API Requests",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(api_active_requests) by (endpoint)",
            "legendFormat": "{{ endpoint }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Active Requests"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Celery Task Execution Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(rate(celery_tasks_total{status=\"success\"}[5m])) by (task_name)",
            "legendFormat": "{{ task_name }} (success)",
            "refId": "A"
          },
          {
            "expr": "sum(rate(celery_tasks_total{status=\"failure\"}[5m])) by (task_name)",
            "legendFormat": "{{ task_name }} (failure)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Tasks/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Celery Queue Length",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "sum(celery_queue_length) by (queue_name)",
            "legendFormat": "{{ queue_name }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Pending Tasks"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Database Query Latency (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(db_query_duration_seconds_bucket[5m])) by (operation, table, le))",
            "legendFormat": "{{ operation }} {{ table }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Database Connection Pool",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "db_connection_pool_size",
            "legendFormat": "Total Connections",
            "refId": "A"
          },
          {
            "expr": "db_connection_pool_available",
            "legendFormat": "Available Connections",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Items Collected (by Source)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "sum(rate(items_collected_total[5m])) by (source)",
            "legendFormat": "{{ source }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Items/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "Trends Created (by Category)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "sum(rate(trends_created_total[5m])) by (category)",
            "legendFormat": "{{ category }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Trends/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "Active Trends (by State)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "sum(active_trends{state=\"emerging\"})",
            "legendFormat": "Emerging",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto"
        }
      },
      {
        "id": 12,
        "title": "Viral Trends",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 40},
        "targets": [
          {
            "expr": "sum(active_trends{state=\"viral\"})",
            "legendFormat": "Viral",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto"
        }
      },
      {
        "id": 13,
        "title": "System CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 44},
        "targets": [
          {
            "expr": "system_cpu_usage_percent",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU Usage", "max": 100, "min": 0},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [80], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High CPU Usage",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 14,
        "title": "System Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 44},
        "targets": [
          {
            "expr": "system_memory_usage_percent",
            "legendFormat": "Memory %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Memory Usage", "max": 100, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 15,
        "title": "System Disk Usage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 44},
        "targets": [
          {
            "expr": "system_disk_usage_percent",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 85, "color": "red"}
              ]
            },
            "max": 100,
            "min": 0,
            "unit": "percent"
          }
        }
      }
    ]
  },
  "overwrite": true
}
